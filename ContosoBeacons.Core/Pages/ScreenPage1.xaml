<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContosoBeacons.Pages.ScreenPage1">
  <Grid RowSpacing="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="3"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition />
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="3"/>
      </Grid.ColumnDefinitions>

      <Button Image="backArrow.jpg" Grid.Column="1" Clicked="btnBack_Clicked"/>
      <Image Source="logo.png" Grid.Column="3"  />
      <Button Text="Hitachi Consulting" TextColor="White" FontSize="12" HorizontalOptions="Center" Grid.Column="4" />
    </Grid>
    
    
    
    <Image Source="sample.jpg" Aspect="AspectFill" VerticalOptions="Fill" HorizontalOptions="Fill"/>
    <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White" FontSize="20"/>
  </Grid>
</ContentPage>